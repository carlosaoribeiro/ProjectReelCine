<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity">

    <!-- ðŸŒ  Fundo gradiente -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_cosmic_gradient" />

    <!-- âœ¨ Textura leve de estrelas -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/stars_overlay"
        android:alpha="0.08"
        android:scaleType="centerCrop" />

    <!-- ðŸš€ Layout principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingBottom="48dp">

            <!-- TÃ­tulo -->
            <TextView
                android:id="@+id/textTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="ReelCine"
                android:textSize="48sp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- SubtÃ­tulo -->
            <TextView
                android:id="@+id/textSubtitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Descubra e compartilhe recomendaÃ§Ãµes de filmes com seus amigos."
                android:textAlignment="center"
                android:textColor="#B0B0B0"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="2dp"
                app:layout_constraintTop_toBottomOf="@id/textTitulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ðŸ”˜ BotÃ£o Google -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoogle"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Continuar com Google"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:letterSpacing="0.02"
                android:fontFamily="@font/poppins_medium"
                android:backgroundTint="#1A2238"
                android:stateListAnimator="@null"
                app:icon="@drawable/ic_google"
                app:iconTint="@null"
                app:iconSize="38dp"
                app:iconPadding="12dp"
                app:iconGravity="textStart"
                app:strokeColor="#333A50"
                app:strokeWidth="1dp"
                app:cornerRadius="24dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/textSubtitulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <!-- Divisor -->
            <TextView
                android:id="@+id/textOu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ou"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/btnGoogle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Campo E-mail -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Seu e-mail"
                app:boxBackgroundColor="#331A2238"
                app:boxStrokeColor="#7C3AED"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="24dp"
                app:boxCornerRadiusTopEnd="24dp"
                app:boxCornerRadiusBottomStart="24dp"
                app:boxCornerRadiusBottomEnd="24dp"
                app:layout_constraintTop_toBottomOf="@id/textOu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/white"
                    android:imeOptions="actionNext" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Senha -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/senhaLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Senha"
                app:endIconMode="password_toggle"
                app:boxBackgroundColor="#331A2238"
                app:boxStrokeColor="#7C3AED"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="24dp"
                app:boxCornerRadiusTopEnd="24dp"
                app:boxCornerRadiusBottomStart="24dp"
                app:boxCornerRadiusBottomEnd="24dp"
                app:layout_constraintTop_toBottomOf="@id/emailLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editSenha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@android:color/white"
                    android:imeOptions="actionDone" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- BotÃ£o Login -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEntrar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Entrar no ReelCine"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/btn_reelcine_gradient"
                app:cornerRadius="24dp"
                android:elevation="6dp"
                android:translationZ="2dp"
                app:rippleColor="#33FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/senhaLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp" />


            <!-- Links -->
            <TextView
                android:id="@+id/textEsqueciSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esqueceu sua senha?"
                android:textColor="#7DD3FC"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/btnEntrar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/linkCadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crie sua conta"
                android:textColor="#A855F7"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintTop_toBottomOf="@id/textEsqueciSenha"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>
