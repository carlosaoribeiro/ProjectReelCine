<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Container Principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#0B132B">

        <!-- Toolbar personalizada -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0B132B"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="ReelCine"
            app:titleTextColor="@android:color/white"
            android:elevation="4dp" />

        <!-- ConteÃºdo com Scroll e padding superior -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:paddingTop="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Campo de busca -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscar filme"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/editBusca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Digite o nome do filme"
                    android:textColorHint="#AAAAAA"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    android:inputType="text"
                    android:imeOptions="actionDone" />

                <ProgressBar
                    android:id="@+id/progressBuscar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBuscar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ” Buscar"
                    style="@style/Button.TeachTrack"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/textFilmeSelecionado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="ðŸŽžï¸ Filme selecionado: nenhum"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Seu comentÃ¡rio"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editComentario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Digite sua opiniÃ£o"
                    android:textColorHint="#AAAAAA"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    android:inputType="text"
                    android:imeOptions="actionDone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSalvarRecomendacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ… Recomendar Filme"
                    style="@style/Button.TeachTrack"
                    android:layout_marginTop="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewFilmes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Menu -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#0B132B"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_drawer"
        app:itemTextColor="@android:color/white"
        app:itemIconPadding="16dp"
        app:itemTextAppearance="@style/NavDrawerItemStyle" />
</androidx.drawerlayout.widget.DrawerLayout>
